{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "rootDir": "../",
    "outDir": "./dist",
    "baseUrl": "../",
    "paths": {
      "@/*": ["./*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["../lib/**/*", "./**/*.ts"],
  "exclude": ["node_modules"]
}
